{% extends 'base.html.twig' %}

{% block title %}{{ 'Inscription'|trans }}{% endblock %}

{% block body %}
<div class="min-h-screen bg-gray-100 flex flex-col justify-center py-12">
    {# En-tête de la page avec titre et lien de connexion #}
    <div class="sm:mx-auto sm:w-full sm:max-w-md">
        <h1 class="text-center text-3xl font-extrabold text-gray-900">
            {{ 'Créer un compte'|trans }}
        </h1>
        <p class="mt-2 text-center text-sm text-gray-600">
            {{ 'Ou'|trans }} 
            <a href="{{ path('app_login', {'_locale': app.request.locale}) }}" 
               class="font-medium text-blue-600 hover:text-blue-500 transition-colors duration-150">
                {{ 'connectez-vous à votre compte existant'|trans }}
            </a>
        </p>
    </div>

    {# Conteneur principal du formulaire #}
    <div class="mt-8 sm:mx-auto sm:w-full sm:max-w-md">
        <div class="bg-white py-8 px-4 shadow sm:rounded-lg sm:px-10">
            {# Début du formulaire avec une classe pour l'espacement vertical des éléments #}
            {{ form_start(registrationForm, {
                'attr': {
                    'class': 'space-y-6',
                    'novalidate': 'novalidate'
                }
            }) }}

            {# Champ Prénom #}
            <div>
                {{ form_label(registrationForm.firstName, 'Prénom'|trans, {
                    'label_attr': {
                        'class': 'block text-sm font-medium text-gray-700'
                    }
                }) }}
                <div class="mt-1">
                    {{ form_widget(registrationForm.firstName, {
                        'attr': {
                            'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm',
                            'placeholder': 'Votre prénom'|trans
                        }
                    }) }}
                </div>
                {{ form_errors(registrationForm.firstName, {
                    'attr': {
                        'class': 'mt-1 text-sm text-red-600'
                    }
                }) }}
            </div>

            {# Champ Nom #}
            <div>
                {{ form_label(registrationForm.lastName, 'Nom'|trans, {
                    'label_attr': {
                        'class': 'block text-sm font-medium text-gray-700'
                    }
                }) }}
                <div class="mt-1">
                    {{ form_widget(registrationForm.lastName, {
                        'attr': {
                            'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm',
                            'placeholder': 'Votre nom'|trans
                        }
                    }) }}
                </div>
                {{ form_errors(registrationForm.lastName, {
                    'attr': {
                        'class': 'mt-1 text-sm text-red-600'
                    }
                }) }}
            </div>

            {# Champ Email #}
            <div>
                {{ form_label(registrationForm.email, 'Email'|trans, {
                    'label_attr': {
                        'class': 'block text-sm font-medium text-gray-700'
                    }
                }) }}
                <div class="mt-1">
                    {{ form_widget(registrationForm.email, {
                        'attr': {
                            'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm',
                            'placeholder': 'votre.email@exemple.com'
                        }
                    }) }}
                </div>
                {{ form_errors(registrationForm.email, {
                    'attr': {
                        'class': 'mt-1 text-sm text-red-600'
                    }
                }) }}
            </div>

            {# Champ Mot de passe #}
            <div>
                {{ form_label(registrationForm.plainPassword, 'Mot de passe'|trans, {
                    'label_attr': {
                        'class': 'block text-sm font-medium text-gray-700'
                    }
                }) }}
                <div class="mt-1">
                    {{ form_widget(registrationForm.plainPassword, {
                        'attr': {
                            'class': 'appearance-none block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm placeholder-gray-400 focus:outline-none focus:ring-blue-500 focus:border-blue-500 sm:text-sm',
                            'placeholder': '••••••••'
                        }
                    }) }}
                </div>
                {{ form_errors(registrationForm.plainPassword, {
                    'attr': {
                        'class': 'mt-1 text-sm text-red-600'
                    }
                }) }}
            </div>

            {# Sélection du rôle #}
            <div class="mt-4">
                {{ form_label(registrationForm.userRole, 'Type de compte'|trans, {
                    'label_attr': {
                        'class': 'block text-sm font-medium text-gray-700 mb-2'
                    }
                }) }}
                <div class="space-y-2">
                    {{ form_widget(registrationForm.userRole, {
                        'attr': {
                            'class': 'space-y-2'
                        },
                        'row_attr': {
                            'class': 'flex items-center space-x-3'
                        },
                        'label_attr': {
                            'class': 'text-sm text-gray-700'
                        }
                    }) }}
                </div>
                {{ form_errors(registrationForm.userRole, {
                    'attr': {
                        'class': 'mt-1 text-sm text-red-600'
                    }
                }) }}
            </div>

            {# Conditions d'utilisation #}
            <div class="flex items-center">
                {{ form_widget(registrationForm.agreeTerms, {
                    'attr': {
                        'class': 'h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded'
                    }
                }) }}
                {{ form_label(registrationForm.agreeTerms, "J'accepte les conditions d'utilisation"|trans, {
                    'label_attr': {
                        'class': 'ml-2 block text-sm text-gray-900'
                    }
                }) }}
            </div>
            {{ form_errors(registrationForm.agreeTerms, {
                'attr': {
                    'class': 'mt-1 text-sm text-red-600'
                }
            }) }}

            {# Bouton de soumission #}
            <div>
                <button type="submit" 
                        class="w-full flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-150">
                    {{ 'Créer mon compte'|trans }}
                </button>
            </div>

            {{ form_end(registrationForm) }}
        </div>
    </div>
</div>
{% endblock %}