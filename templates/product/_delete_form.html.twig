<form method="post" action="{{ path('app_product_delete', {'id': product.id}) }}" 
      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer ce produit ?');"
      class="inline-block">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ product.id) }}">
    <button type="submit" class="bg-red-500 hover:bg-red-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2">
        <i class="fas fa-trash-alt mr-2"></i>Supprimer
    </button>
</form>